<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Remotes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/styleHome.css">
    <link rel="shortcut icon" href="/assets/img/favicon.ico" type="image/x-icon">
</head>

<body class="bg-dark">
    <h3 class="mb-5 mt-5 text-center text-white">Select your new remote model</h3>
    <div class="container-fluid">
        <div class="row">
            <% array.forEach(element=> { %>
                <div class="col-lg-3 col-sm-6">
                    <div class="card card_new_remote">
                        <div class="card-body">
                            <button class="btn" style="background-color: blue; width: 100%;" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop-<%= element.id %>">
                                <i class="col-sm-12 bi bi-<%= element.icon %>"
                                    style="font-size: 7em; color: white; text-align: center;"></i>
                                <p class="col-sm-12" style="font-size: 3vh; color: white;">
                                    <%= element.id %>
                                </p>
                            </button>
                        </div>
                    </div>
                </div>

                <% }) %>
        </div>
    </div>

    <% array.forEach(element=> { %>
        <div class="modal fade" id="staticBackdrop-<%= element.id %>" data-bs-backdrop="static" data-bs-keyboard="false"
            tabindex="-1" aria-labelledby="staticBackdropLabel-<%= element.id %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form action="/" method="POST">

                        <input type="hidden" name="prec_name" value="<%= element.id %>">
                        <input type="hidden" name="prec_icon" value="<%= element.icon %>">
                        <input type="hidden" name="prec_color" value="blue">
                        <input type="hidden" name="prec_icon_color" value="white">
                        <input type="hidden" name="id" value="<%= element.id %>">

                        <div class="modal-body row g-3">
                            <div class="col-sm-12 row mb-3">
                                <label for="inputName" class="col-sm-3 col-form-label">Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputName" name="name"
                                        placeholder=<%=element.id %>>
                                </div>
                            </div>
                            <div class="col-sm-12 row mb-3">
                                <label for="inputIcon" class="col-sm-3 col-form-label">Icon:</label>
                                <div class="col-sm-9">
                                    <select id="inputIcon" class="form-control" name="icon">
                                        <option selected disabled hidden>
                                            <%= element.icon %>
                                        </option>
                                        <option>tv</option>
                                        <option>cast</option>
                                        <option>speaker</option>
                                        <option>lightbulb</option>
                                        <option>lamp</option>
                                        <option>controller</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12 row mb-3">
                                <label for="inputColor" class="col-sm-3 col-form-label">Color:</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" id="inputColor" name="color"
                                        placeholder="blue">
                                </div>
                                <label for="inputIcon_color" class="col-sm-3 col-form-label">Icon color:</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" id="inputIcon_color" name="icon_color"
                                        placeholder="white">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" align="center">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success" name="action" value="create">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
            <a class="btn btn-secondary fixed-bottom" href="/"><i class="bi bi-house"></i></a>
</body>

</html>