<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/assets/css/styleHome.css">
    <link rel="stylesheet" href="/assets/css/screen.css">
    <link rel="icon" href="../infraredremote_103577.ico">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="/assets/img/favicon.ico" type="image/x-icon">
</head>

<body class="bg-dark">
    <div class="container-fluid container_home">
        <div class="row ">
            <% array.forEach(element=> { %>
                <div class="col-lg-3 col-sm-12">
                    <div class="card card_remote" style="background-color: <%= element.color %>;">
                        <div class="card-body" style="color: <%= element.icon_color %>;" align="center">
                            <a href="/remote/<%=element.id %>" class="col-sm-12 bi bi-<%= element.icon %>"
                                style="font-size: 7em; color: <%= element.icon_color %>"></a>
                            <p style="font-size: 3vh; text-align: center;">
                                <%= element.name %>
                                    <button type="button" class="button_card_home btn" style="width: 30px;"
                                        data-bs-toggle="modal" data-bs-target="#staticBackdrop-<%= element.name %>">
                                        <i class="bi bi-pencil-square"
                                            style="font-size: 3vh; color: <%= element.icon_color %>;"></i>
                                    </button>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% array.forEach(element=> { %>
        <div class="modal fade" id="staticBackdrop-<%= element.name %>" data-bs-backdrop="static"
            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel-<%= element.name %>"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form action="/" method="POST">

                        <input type="hidden" name="prec_name" value="<%= element.name %>">
                        <input type="hidden" name="prec_icon" value="<%= element.icon %>">
                        <input type="hidden" name="prec_color" value="<%= element.color %>">
                        <input type="hidden" name="prec_icon_color" value="<%= element.icon_color %>">
                        <input type="hidden" name="id" value="<%= element.id %>">

                        <div class="modal-body row g-3">
                            <div class="col-sm-12 row mb-3">
                                <label for="inputName" class="col-sm-3 col-form-label">Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="inputName" name="name"
                                        placeholder=<%=element.name %>>
                                </div>
                            </div>
                            <div class="col-sm-12 row mb-3">
                                <label for="inputIcon" class="col-sm-3 col-form-label">Icon:</label>
                                <div class="col-sm-9">
                                    <select id="inputIcon" class="form-control" name="icon">
                                        <option selected disabled hidden>
                                            <%= element.icon %>
                                        </option>
                                        <option>tv</option>
                                        <option>cast</option>
                                        <option>speaker</option>
                                        <option>lightbulb</option>
                                        <option>lamp</option>
                                        <option>controller</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12 row mb-3">
                                <label for="inputColor" class="col-sm-3 col-form-label">Color:</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" id="inputColor" name="color"
                                        placeholder="<%= element.color %>">
                                </div>
                                <label for="inputIcon_color" class="col-sm-3 col-form-label">Icon color:</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" id="inputIcon_color" name="icon_color"
                                        placeholder="<%= element.icon_color %>">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" align="center">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger" name="action" value="delete">Delete
                                remote</button>
                            <button type="submit" class="btn btn-success" name="action" value="update">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>

            <a class="btn btn-success fixed-bottom" href="/remotes"">+</a>
</body>

</html>